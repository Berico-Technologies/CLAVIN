#!/bin/sh 

# check if CLAVIN_HOME is set 
# if not bail out 

if [ ! -n "$CLAVIN_HOME" ]; then 
    echo "You need to set CLAVIN_HOME"
    exit
fi

# CLAVIN_OPTS should be set to -Xmx2048M or higher

java $CLAVIN_OPTS -cp $CLAVIN_HOME/lib/clavin-1.0.0rc6-jar-with-dependencies.jar com.bericotech.clavin.$2



